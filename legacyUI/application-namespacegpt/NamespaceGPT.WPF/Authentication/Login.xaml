<Window x:Class="NamespaceGPT.WPF.Authentication.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NamespaceGPT.WPF"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="1000">
    <Grid Background="#0b184b">
        <StackPanel Width="200" VerticalAlignment="Center">
            <Label Foreground="#f2f5fa" FontSize="17">Here you can Log In</Label>
            <Label Foreground="#334978">Username</Label>
            <TextBox Foreground="white" Background="#1b2956" BorderThickness="0" x:Name="UsernameTextBox" Margin="5,0,5,0" Padding="3"/>
            <Label Foreground="#334978">Password</Label>
            <PasswordBox Foreground="white" Background="#1b2956" BorderThickness="0" x:Name="PasswordTextBox" Margin="5,0,5,0" Padding="3"/>
            <Button BorderThickness="0" Height="30" Foreground="#f2f5fa" Content="LOGIN" Background="#6733ef" Click="LoginButton_Click" Margin="5,10,5,0"/>
            <Label Foreground="Gray" FontSize="12">Don't have an account? Sign up</Label>
            <Button BorderThickness="0" Height="30" Foreground="#f2f5fa" Content="SIGN UP" Background="#6733ef" Click="SingupButton_Click" Margin="5,0,5,0"/>
        </StackPanel>
    </Grid>
</Window>
